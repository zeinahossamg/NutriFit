<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>NutriFit</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/6866201b21.js" crossorigin="anonymous"></script>
   
    <link rel="stylesheet" href="/css/style.css" />
</head> 


<div id="editUsers" class="page ">
    <div class="Tablelist">
        <h2>Users</h2>
        <div class="table-container">
        <table>
            <thead>
                <tr><th>ID</th>
                    <th>User name</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>Role</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody id="USERTABLE" >
                
                
                    <% arr.forEach((item,index) => { %>
                    <tr>
                        <td><%= index +1 %> </td>
                    <td><%= item.username %> </td>
                    <td><%= item.password %> </td>
                    <td><%= item.email %></td>  
                    <td><%= item.role %></td>       
                        <% }) %> 
                    </tr>
                 
                 
            </tbody>
            
        </table>
        </div>
    </div>

<div id="deletePopup" class="popup-container">
    <div class="popup-content">
        <span class="close" onclick="window.location.href = 'user.ejs'">&times;</span>
        <h2>Delete Data</h2>
        <p>please enter id for deletion</p>
        <form action="/admin/DeleteUsers?_method=PUT" method="post">
        <input type="text" id="ID" 
        class="inputdata" placeholder="ID"><span id="DeleteErrorId" class="error-message hidden">Id not found </span><br><br>
        <button onclick="deleteData(event)" class="editors">Delete</button>
    </form>
    </div>
</div>








<script src="/js/javascript.js"></script>