<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>NutriFit</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/6866201b21.js" crossorigin="anonymous"></script>
   
    <link rel="stylesheet" href="/css/style.css" />
</head>
<div class="container ">
    <%- include('../components/navbar.ejs',{currentpage:"plan"}) %>

    <main>
<div id="editProduct" class="page ">
    <div class="Tablelist">
        <h2>Products</h2>
        <% if (arr.length === 0) { %>
            <h1 style="text-align: center ; margin-bottom: 4rem ;"> No Data Available</h1>
           <% } else {  %>
        <div class="table-container">
        <table>
            <thead>
                <tr><th>ProductID</th>
                    <th>Product name</th>
                    <th>Duration</th>
                    
                    <th>Price</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody id="ProductTABLE" >
                
                <% arr.forEach((item,index) => { %>
                    <tr>
                        <td><%= index +1 %> </td>
                    <td><%= item.plan %> </td>
                    <td><%= item.duration %> </td>
                    <td><%= item.price %></td>  
                           
                        <% }) %> 
                    </tr> 

            </tbody>
            
        </table>
    </div>
    <% }%>
        <button id="addButton" class="editors" onclick="window.location.href ='AddPlans'">Add</button>
<button id="editButton" class="editors" onclick="window.location.href ='EditPlans'">Edit</button>
<button id="deleteButton" class="editors" onclick="window.location.href ='DeletePlans'">Delete</button>
</div>

<% if (message) { %>
    <h1 class="<%= success ? 'success-messagee' : 'error-messagee' %>"><%= message %></h1>
<% } %>
    
    
</div>
    </main>
</div>
<script src="/js/javascript.js"></script>