<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>NutriFit</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/6866201b21.js" crossorigin="anonymous"></script>
   
    <link rel="stylesheet" href="/css/style.css" />
</head>
<div class="container ">
    <%- include('../components/navbar.ejs',{currentpage:"plan"}) %>

    <main>
<div id="editProduct" class="page ">
    <div class="Tablelist">
        <h2>Products</h2>
        <table>
            <thead>
                <tr><th>ProductID</th>
                    <th>Product name</th>
                    <th>Duration</th>
                    
                    <th>Price</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody id="ProductTABLE" >
                
                 
            </tbody>
            
        </table>
        <button id="addButton" class="editors" onclick="openPopup('addPopupProduct')">Add</button>
<button id="editButton" class="editors" onclick="openPopup('editPopupProduct')">Edit</button>
<button id="deleteButton" class="editors" onclick="openPopup('deletePopupProduct')">Delete</button>
</div>
<div id="addPopupProduct" class="popup-container">
    <div class="popup-content">
        <span class="close" onclick="closePopup('addPopupProduct')">&times;</span>
        <h2>Add Data</h2>
        

        <input type="text" id="newProductName"
        class="inputdata" placeholder="new Product Name"><span id="AddProducterrorError" class="error-message hidden">this productname is unavailable</span><br><br>

        <input type="text" id="newProductDuration"
        class="inputdata" placeholder="Duration"><span id="AddProductDurationError" class="error-message hidden">unavailable Duration</span><br><br>

        <input type="text" id="newUserID"
        class="inputdata" placeholder="user-id"><span id="AddUSerIdError" class="error-message hidden">please enter valid user id</span><br><br>
        
        <button onclick="addPlan()" class="editors">Add</button>
    </div>
    </div>
    <div id="editPopupProduct" class="popup-container">
        <div class="popup-content">
            <span class="close" onclick="closePopup('editPopupProduct')">&times;</span>
            <h2>Edit Data</h2>
            <input type="text" id="ProductIdedit" 
            class="inputdata" placeholder="ProductID"><span id="EditErrorProductId" class="error-message hidden">product not found!</span><br><br>

            
        <input type="text" id="ProductNameedit" 
        class="inputdata" placeholder="ProductName"><span id="EditErrorProductname" class="error-message hidden">Please enter correct name</span><br><br>

        <input type="text" id="newProductDurationedit"
        class="inputdata" placeholder="Duration"><span id="EditErrorDuration" class="error-message hidden">Duration is incorrect</span><br><br>

      

        

        <button onclick="editPlan()" class="editors">Edit</button>
        </div>
    </div>
    <div id="deletePopupProduct" class="popup-container">
        <div class="popup-content">
            <span class="close" onclick="closePopup('deletePopupProduct')">&times;</span>
            <h2>Delete Data</h2>
            <p>please enter id for deletion</p>
            <input type="text" id="pproductID" 
            class="inputdata" placeholder="ProductID"><span id="DeleteErrorProductId" class="error-message hidden">Id not found </span><br><br>
            <button onclick="deletePlan()" class="editors">Delete</button>
        </div>
    </div>
</div>
    </main>
</div>
<script src="/js/javascript.js"></script>